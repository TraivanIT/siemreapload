<div id="top-nav" class="container-fluid">
  <div class="row">
    <div class="col-lg-2 border-right ">
      <div class="admi-logo">
        <h5><%= Setting.first.site_name%></h5>
      </div>
    </div>
    <div class="col-lg-10 top-nav-link">
      <div class="top-link-inner">
        <!--nav icons-->
      <nav class="navbar navbar-expand-md">
        <div class="collapse navbar-collapse justify-content-end" id="myNavbar">
          <!--nav icons-->
          <ul class="navbar-nav icons">
          
            <li class="nav-item mr-4 icon">
              <%= link_to admin_comments_path , class: "nav-link" do %>
                <i class="far fa-bell"></i>
                <span class="label label-warning"><%= Comment.where(status: false).count%></span>
              <% end %>
            </li>
            <li class="nav-item mr-4 icon">
              <%= link_to admin_messages_path , class: "nav-link" do %>
                <i class="far fa-envelope"></i>
                <span class="label label-message"><%= Message.where(status: false).count%></span>
              <% end %>
            </li>
            <li class="nav-item mr-2 text-muted">
              <%= image_tag('https://s3.us-east-2.amazonaws.com/traivan-portfolio-bucket/0W8A4912.jpg' ,
                    width: "35",
                    class: "img-fluid rounded-circle")%> <%= Traivan.first.fullname%>
            </li>
            
          </ul>
        </div>
      </nav>
      </div>
    </div><!--end of col-lg-10-->
  </div>
</div>


  
 


